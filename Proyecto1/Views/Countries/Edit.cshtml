@model Proyecto1.Models.Countries

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="COUNTRY_ID" />
            <div class="form-group">
                <label asp-for="COUNTRY_NAME" class="control-label"></label>
                <input asp-for="COUNTRY_NAME" class="form-control" value="@Model.COUNTRY_NAME" />
                <span asp-validation-for="COUNTRY_NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="region_id">Select a region:</label>
                <select asp-for="REGION_ID" class="form-control" id="region_id" name="region_id">
                    <option value="">Select a region</option>
                    @foreach (var region in (SelectList)ViewData["region_id"])
                    {
                        var isSelected = Model.REGION_ID.HasValue && Model.REGION_ID == int.Parse(region.Value);
                        <option value="@region.Value" selected="@isSelected">@region.Text</option>
                    }
                </select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
