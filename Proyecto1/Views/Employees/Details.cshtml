@model Proyecto1.Models.Employees

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Employee Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Aumento el tamaño de la columna -->
            <div class="card card-lg">
                <!-- Agrego la clase card-lg para aumentar el tamaño de la tarjeta -->
                <div class="card-body">
                    <h4 class="card-title">Order Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FIRST_NAME)</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LAST_NAME)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EMAIL)</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PHONE)</dd>

                        <dt class="col-sm-4">Hire Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HIRE_DATE)</dd>

                        <dt class="col-sm-4">Job Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.JOB_TITLE)</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.EMPLOYEE_ID">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
