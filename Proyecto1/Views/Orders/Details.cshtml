@model Proyecto1.Models.Orders

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Order Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Aumento el tamaño de la columna -->
            <div class="card card-lg">
                <!-- Agrego la clase card-lg para aumentar el tamaño de la tarjeta -->
                <div class="card-body">
                    <h4 class="card-title">Order Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.STATUS)</dd>

                        <dt class="col-sm-4">Order Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ORDER_DATE)</dd>

                        <dt class="col-sm-4">Customer Name:</dt>
                        <dd class="col-sm-8">@(Model.Customers != null ? Model.Customers.NAME : "No Customer")</dd>

                        <dt class="col-sm-4">Employee Name:</dt>
                        <dd class="col-sm-8">@(Model.Employees != null ? Model.Employees.FIRST_NAME : "No Employee")</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ORDER_ID">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
